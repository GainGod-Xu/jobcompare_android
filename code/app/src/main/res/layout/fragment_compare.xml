                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/job2Company"
                    app:layout_columnWeight="1" app:layout_gravity="fill" android:layout_marginTop="8dp"
                    android:textAlignment="center"/>
            <TextView
                    android:text="@string/location"
