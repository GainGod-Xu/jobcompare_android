                    android:fontFamily="@font/roboto_medium" android:textSize="14sp"
                    android:layout_marginStart="8dp" android:textAlignment="textEnd" android:layout_marginEnd="8dp"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/job1YearlySalary"
