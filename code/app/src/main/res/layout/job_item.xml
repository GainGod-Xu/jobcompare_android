<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:id="@+id/relativeLayout">

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:id="@+id/jobCardView"
    >

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp">

            <TextView
                    android:id="@+id/jobTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:text="jobTitle"
                    android:textSize="20dp"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="8dp" android:layout_marginStart="8dp"
                    android:fontFamily="@font/roboto_bold"/>
            <TextView
                    android:id="@+id/companyName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="companyName"
                    android:textSize="16sp"
                    android:textAlignment="viewStart"
                    app:layout_constraintTop_toBottomOf="@+id/jobTitle"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                    android:fontFamily="@font/roboto_bold"/>
            <TextView
                    android:id="@+id/score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circle"
                    android:gravity="center"
                    android:text="score"
                    android:textSize="16sp"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="8dp" android:fontFamily="@font/roboto_bold"/>
            <TextView
                    android:id="@+id/jobLocation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="jobLocation"
                    android:textSize="16sp"
                    android:textAlignment="viewStart"
                    app:layout_constraintTop_toBottomOf="@+id/companyName"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="8dp" android:layout_marginStart="8dp"
                    android:fontFamily="@font/roboto_medium"/>
            <TextView
                    android:id="@+id/salary"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="salary"
                    android:textSize="16sp"
                    android:textAlignment="viewStart" app:layout_constraintTop_toBottomOf="@+id/jobLocation"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp" android:fontFamily="@font/roboto_medium"/>
            <ImageButton
                    android:layout_width="33dp"
                    android:layout_height="33dp" app:srcCompat="@drawable/ic_baseline_menu_24"
                    android:id="@+id/jobMenuButton"
                    app:layout_constraintEnd_toEndOf="@+id/jobTitle" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="8dp" android:layout_marginEnd="8dp"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/currentJob"
                    app:layout_constraintStart_toEndOf="@+id/salary" app:layout_constraintTop_toTopOf="@+id/salary"
                    app:layout_constraintEnd_toStartOf="@+id/score" app:layout_constraintHorizontal_bias="1.0"
                    android:layout_marginEnd="16dp" android:textColor="#FA0606" android:fontFamily="@font/roboto_bold"/>
            <CheckBox
                    android:layout_width="81dp"
                    android:layout_height="33dp" android:id="@+id/checkBox"
                    app:layout_constraintTop_toTopOf="@+id/jobTitle"
                    app:layout_constraintEnd_toEndOf="@+id/jobMenuButton"
                    android:button="@null"
                    android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
            />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>